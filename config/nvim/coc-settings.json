{
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "python"
  ],
  "python.venvFolders": ["envs", ".pyenv", ".direnv", ".venv"],
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["-l", "120"],
  "python.linting.flake8Enabled": true,
  "eslint.nodeEnv": "test"
}
